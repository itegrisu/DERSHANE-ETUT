
@{
    ViewBag.Title = "Giriş Ekranı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="~/Content/Giris/girisEkrani.css" rel="stylesheet" />

<!DOCTYPE html>
<html>
<head>

    <title>Login Page</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="styles.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        setTimeout(function () {
            $('.tempdata-error').fadeOut('slow');
        }, 5000);
    </script>
</head>
<body>
    <div class="container">

        <div class="d-flex justify-content-center h-100">
            <div class="card">

                <div class="card-header">
                    <h3>Giriş Ekranı</h3>
                </div>

                <div class="card-body">
                    @using (Html.BeginForm("Giris", "Giris", FormMethod.Post))
                    {
                    <div class="container">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Kullanıcı adını giriniz" name="EPOSTA" required>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" class="form-control" placeholder="Şifrenizi giriniz" name="SIFRE" required>
                        </div>
                        @if (@ViewBag.Message != null)
                        {<div class="text-danger tempdata-error">@ViewBag.Message</div>}
                        <div class="">
                            <a class="btn btn-primary btn2 text-white" id="redirectBtn" style="display:block">Kayit Ol</a>
                        </div>
                        <select class="form-select" id="mySelect" style="width:60%">
                            <option value="1">Öğrenci</option>
                            <option value="2">Öğretmen</option>
                            <option value="3">Admin</option>
                        </select>
                        <hr />
                        <input type="hidden" name="ID" value="@ViewBag.KullaniciId" />

                        @*<div class="row align-items-center remember" style="margin-top:-22px">
                            <input type="checkbox">Beni Hatırla
                        </div>*@

                        <div class="form-group ">
                            <input type="submit" value="Giriş Yap" class="btn btn-success btn1 ">
                        </div>

                    </div>
                        <hr /><hr /><hr /><hr />
                        <div style="position: absolute; bottom: 0; left: 50%; transform: translateX(-50%);">
                            <a href="/Giris/SifreSifirla" class="custom-link">Şifremi Unuttum</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    const selectEl = document.querySelector('#mySelect');
    const redirectBtn = document.querySelector('#redirectBtn');
    var button = document.getElementById("")

    redirectBtn.addEventListener('click', () => {
        const selectValue = selectEl.value;
        switch (selectValue) {
            case '1':
                window.location.href = '/Kayit/OgrenciKayit';
                break;
            case '2':
                window.location.href = '/Kayit/OgretmenKayit';
                break;
        }
    });
</script>
