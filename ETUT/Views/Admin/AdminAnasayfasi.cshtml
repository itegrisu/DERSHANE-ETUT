@{
    ViewBag.Title = "OgretmenKayit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link href="~/Content/adminTemplate/assets/vendors/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
    @*<link href="~/Content/adminTemplate/assets/vendors/css/vendor.bundle.base.css" rel="stylesheet" />*@
    <!-- jQuery UI kütüphanesini dahil etme -->
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link href="~/Content/adminTemplate/assets/css/style.css" rel="stylesheet" />
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/Content/adminTemplate/assets/images/favicon.ico" />

    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <script src="~/Content/jquery-3.6.0.min.js"></script>
    <script src="~/Content/jquery-ui.min.js"></script>

</head>
<body>
    <div class="container-scroller">
        <div class="row p-0 m-0 proBanner" id="proBanner">
            <div class="col-md-12 p-0 m-0">
                <div class="card-body card-body-padding d-flex align-items-center justify-content-between">
                    <div class="ps-lg-1">
                        <div class="d-flex align-items-center justify-content-between">
                            <p class="mb-0 font-weight-medium me-3 buy-now-text">ADMİN</p>
                            <a href="/Admin/AdminAnaSayfasi" target="_blank" class="btn me-2 buy-now-btn border-0"></a>
                        </div>
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                        <a href="/Admin/AdminAnaSayfasi"><i class="mdi mdi-home me-3 text-white"></i></a>
                        <button id="bannerClose" class="btn border-0 p-0">
                            <i class="mdi mdi-close text-white me-0"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">

            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link " id="profileDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="nav-profile-img">
                                <img src="~/Fotograflar/11.jpeg" alt="image">
                                <span class="availability-status online"></span>
                            </div>
                            <div class="nav-profile-text">
                                <p class="mb-1 text-black">Mücahit Şimşek</p>
                            </div>
                        </a>
                        <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" href="#">
                                <i class="mdi mdi-cached me-2 text-success"></i> Activity Log
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">
                                <i class="mdi mdi-logout me-2 text-primary"></i> Signout
                            </a>
                        </div>
                    </li>


                    <li class="nav-item nav-logout d-none d-lg-block">
                        @if (Request.IsAuthenticated)
                        {
                            <a href="/Giris/Cikis" style="color: black;" class="nav-link">
                                <i class="mdi mdi-power"></i>
                            </a>}

                    </li>

                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <a href="#" class="nav-link">
                            <div class="nav-profile-image">
                                <img src="~/Fotograflar/11.jpeg" alt="profile">
                                <span class="login-status online"></span>
                                <!--change to offline or busy as needed-->
                            </div>
                            <div class="nav-profile-text d-flex flex-column">
                                <span class="font-weight-bold mb-2">Mücahit Şimşek</span>
                                <span class="text-secondary text-small">Admin</span>
                            </div>
                            <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/AdminAnasayfasi">
                            <span class="menu-title">Ana Ekran</span>
                            <i class="mdi mdi-home menu-icon"></i>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Etutler">
                            <span class="menu-title">Etutler</span>
                            <i class="mdi mdi-chart-bar menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Duzenle">
                            <span class="menu-title">Duzenle</span>
                            <i class="mdi mdi-table-large menu-icon"></i>
                        </a>
                    </li>


                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="page-header">
                        <h3 class="page-title">
                            <span class="page-title-icon bg-gradient-primary text-white me-2">
                                <i class="mdi mdi-home"></i>
                            </span> Ana Ekran
                        </h3>
                        <nav aria-label="breadcrumb">

                        </nav>
                    </div>

                    @Html.Partial("_DershaneIstatiskleri")

                    @Html.Partial("_EtutAlanOgrenciler")


                </div>
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
                <footer class="footer">
                    <div class="container-fluid d-flex justify-content-between">
                        <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">Copyright © Tüm Hakları Saklıdır</span>
                        <span class="float-none float-sm-end mt-1 mt-sm-0 text-end">  Mücahit Şimşek </span>
                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    @*<script src="~/Content/adminTemplate/assets/vendors/js/vendor.bundle.base.js"></script>*@
    <!-- endinject -->
    <!-- Plugin js for this page -->

    <script src="~/Content/adminTemplate/assets/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Content/adminTemplate/assets/js/off-canvas.js"></script>
    <script src="~/Content/adminTemplate/assets/js/hoverable-collapse.js"></script>
    <script src="~/Content/adminTemplate/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    @*<script src="~/Content/adminTemplate/assets/js/dashboard.js"></script>*@
    @*<script src="~/Content/adminTemplate/assets/js/todolist.js"></script>*@
    <!-- End custom js for this page -->
    
</body>
</html>

