@model IEnumerable<ETUT.Models.TBLETUT>

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Content/adminTemplate/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Content/adminTemplate/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End Plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/Content/adminTemplate/assets/css/style.css">
    <!-- End layout styles -->
    <script src="~/Content/jquery-3.6.0.min.js"></script>

    <link rel="shortcut icon" href="~/Content/adminTemplate/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <!-- partial:~/PurpleAdmin-Free-Admin-Template-master/partials/_navbar.html -->
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">

            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link " id="profileDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="nav-profile-img">
                                <img src="~/Fotograflar/11.jpeg" alt="image">
                                <span class="availability-status online"></span>
                            </div>
                            <div class="nav-profile-text">
                                <p class="mb-1 text-black">Mücahit Şimşek</p>
                            </div>
                        </a>
                        <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" href="#">
                                <i class="mdi mdi-cached me-2 text-success"></i> Activity Log
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">
                                <i class="mdi mdi-logout me-2 text-primary"></i> Signout
                            </a>
                        </div>
                    </li>


                    <li class="nav-item nav-logout d-none d-lg-block">
                        @if (Request.IsAuthenticated)
                        {
                <a href="/Giris/Cikis" style="color: black;" class="nav-link">
                    <i class="mdi mdi-power"></i>
                </a>}

                    </li>
                  
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:~/PurpleAdmin-Free-Admin-Template-master/partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <a href="#" class="nav-link">
                            <div class="nav-profile-image">
                                <img src="~/Fotograflar/11.jpeg" alt="profile">
                                <span class="login-status online"></span>
                                <!--change to offline or busy as needed-->
                            </div>
                            <div class="nav-profile-text d-flex flex-column">
                                <span class="font-weight-bold mb-2">Mücahit Şimşek</span>
                                <span class="text-secondary text-small">Admin</span>
                            </div>
                            <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/AdminAnasayfasi">
                            <span class="menu-title">Ana Ekran</span>
                            <i class="mdi mdi-home menu-icon"></i>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Etutler">
                            <span class="menu-title">Etutler</span>
                            <i class="mdi mdi-chart-bar menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Duzenle">
                            <span class="menu-title">Duzenle</span>
                            <i class="mdi mdi-table-large menu-icon"></i>
                        </a>
                    </li>


                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">

                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <p class="card-description"></p>
                                <h3>Güncel Etütler</h3>
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th> Öğrenci </th>
                                            <th> Öğretmen </th>
                                            <th> Ders </th>
                                            <th> Saat / Tarih</th>
                                            <th> İşlem </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                <td class="py-1">
                                                    @item.TBLOGRENCI.AD @item.TBLOGRENCI.SOYAD
                                                </td>
                                                <td>@item.TBLOGRETMEN.AD @item.TBLOGRETMEN.SOYAD</td>
                                                <td>@item.TBLORTALAN.DERSADI</td>
                                                <td>@item.ZAMAN.ToString("dd/M/yyyy")  @item.TBLSAAT.SAAT</td>
                                                <td><a href="#" onclick="sil(@item.ID, this)" class="btn btn-gradient-danger">SİL</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- content-wrapper ends -->
                <!-- partial:~/PurpleAdmin-Free-Admin-Template-master/partials/_footer.html -->
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Content/adminTemplate/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/Content/adminTemplate/assets/vendors/chart.js/Chart.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Content/adminTemplate/assets/js/off-canvas.js"></script>
    <script src="~/Content/adminTemplate/assets/js/hoverable-collapse.js"></script>
    <script src="~/Content/adminTemplate/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/Content/adminTemplate/assets/js/chart.js"></script>
    <!-- End custom js for this page -->
</body>
</html>

<script>
  function sil(id, element) {
  // ask for confirmation
  var result = confirm("Gerçekten silmek istiyor musunuz?");
  // if OK button is clicked
  if (result) {
    // proceed with the ajax request
    $.ajax({
      url: '@Url.Action("EtutSil", "Admin")',
      type: 'POST',
      data: { id: id },
      success: function () {
        // do something after deletion
          $(element).closest("tr").remove();
      }
    });
  }
  // if Cancel button is clicked
  else {
    // do nothing
  }
}
</script>