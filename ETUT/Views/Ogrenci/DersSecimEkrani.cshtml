<script>
    $(document).ready(function () {
        $('#ALANID').on('change', function () {
            var alanId = $(this).val();
            $.ajax({
                url: '@Url.Action("OgretmenlerıAlandanGetir", "Ogrenci")',
                type: 'GET',
                data: { alanId: alanId },
                success: function (ogretmenler) {
                    var ogretmenlerList = $('#OGRETMENID');
                    ogretmenlerList.empty();
                    ogretmenlerList.append($('<option>', {
                        value: "",
                        text: "-- Lütfen bir öğretmen seçin --"
                    }));
                    $.each(ogretmenler, function (i, item) {
                        ogretmenlerList.append($('<option>', {
                            value: item.Value,
                            text: item.Text
                        }));
                    });
                },

            });
        });
    });



