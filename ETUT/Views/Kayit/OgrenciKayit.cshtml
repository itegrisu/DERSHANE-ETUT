@model ETUT.Models.TBLOGRENCI
@{
    ViewBag.Title = "OgrenciKayit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>

    html, body {
        background-image: url('');
        background-image: url('/Fotograflar/5.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        height: 100%;
        font-family: 'Numans', sans-serif;
        overflow: hidden;
    }
</style>
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        setTimeout(function () {
            $('.tempdata-error').fadeOut('slow');
        }, 5000);
    </script>
</head>

<section>
    <div class="container h-100" style="position:relative; top:-42px">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 50px; width: 1000px; max-height: 780px; margin-left: 100px; overflow: auto; ">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Öğrenci Kayıt </p>

                                <form class="mx-1 mx-md-4" method="post" action="/Kayit/OgrenciKayit">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"> </i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(ogr => ogr.AD, new { @class = "form-control", placeholder = "İsminizi giriniz" })
                                            @Html.ValidationMessageFor(ogr => ogr.AD, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"> </i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(ogr => ogr.SOYAD, new { @class = "form-control", placeholder = "Soyisminizi giriniz" })
                                            @Html.ValidationMessageFor(ogr => ogr.SOYAD, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"> </i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(ogr => ogr.TC, new { @class = "form-control", type = "number", placeholder = "TC Kimlik Numaranızı giriniz" })
                                            @Html.ValidationMessageFor(ogr => ogr.TC, "", new { @class = "text-danger" })
                                            @if (@TempData["hata2"] != null)
                                            {<div class="text-danger tempdata-error">@TempData["hata2"]</div>}
                                        </div>
                                    </div>

                                    <div class="dropdown d-flex flex-row align-items-center mb-4 " style="left:16px">

                                        @Html.DropDownListFor(m => m.TBLOGRBRANS.ID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
                                    </div>


                                    <div class="dropdown d-flex flex-row align-items-center mb-4 " style="left:16px">
                                        @Html.DropDownListFor(m => m.TBLOGRSINIF.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })

                                    </div>


                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"> </i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(ogr => ogr.TELNO, new { @class = "form-control", type = "number", placeholder = "Telefon Numaranızı giriniz" })
                                            @Html.ValidationMessageFor(ogr => ogr.TELNO, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"> </i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(ogr => ogr.EPOSTA, new { @class = "form-control", placeholder = "E-postanızı giriniz" })
                                            @Html.ValidationMessageFor(ogr => ogr.EPOSTA, "", new { @class = "text-danger" })


                                            @if (@TempData["hata"] != null)
                                            {<div class="text-danger tempdata-error">@TempData["hata"]</div>}

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"> </i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(ogr => ogr.SIFRE, new { @class = "form-control", placeholder = "Şifrenizi giriniz" })
                                            @Html.ValidationMessageFor(ogr => ogr.SIFRE, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div id="kayitBasarili" class="alert alert-success d-none" role="alert">

                                        Kayıt işlemi başarılı. <div id="geriSayim"></div>
                                    </div>

                                    <div class="d-flex  float-start mx-4 mb-3 mb-lg-4">
                                        <div class="btn-group btn-group-lg">
                                            <div>
                                                <button type="submit" value="Submit" class="btn btn-primary "> Kayıt Ol</button>


                                            </div>
                                            <span class="mx-2"></span>
                                            <div>
                                                <a href="/Giris/Giris" class="btn btn-danger  ">Vazgeç</a>
                                            </div>
                                            <div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="~/Fotograflar/10.jpg" style="width: 306px; margin-top: 23px; margin-left:100px" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    setTimeout(function () {
        $('#errorMessage').fadeOut('fast');
    }, 3000);
</script>

<script>
// Başarılı kayıt mesajını kontrol et ve div'i göster
$(function () {
  if ('@TempData["KayitBasarili"]' == "True") {
    $("#kayitBasarili").removeClass("d-none");

    // Geri sayım süresi 5 saniye
    var sure = 5;

    // Geri sayım elemanını seç
    var geriSayim = $("#geriSayim");

    // Geri sayım elemanının içeriğini süre ile güncelle
    geriSayim.text("Anasayfaya yönlendiliyorsunuz " + sure);

    // Her saniyede bir fonksiyonu çalıştır
    var zamanlayici = setInterval(function () {
      // Süreyi bir azalt
      sure--;

      // Geri sayım elemanının içeriğini süre ile güncelle
      geriSayim.text("Anasayfaya yönlendiliyorsunuz " + sure);

      // Süre sıfır olursa
      if (sure == 0) {
        // Zamanlayıcıyı durdur
        clearInterval(zamanlayici);

        // Giriş sayfasına yönlendir
        window.location.href = "@Url.Action("Giris", "Giris")";
      }
    }, 1000);

    // Geri sayım elemanını göster
    geriSayim.show();
  }
});
</script>